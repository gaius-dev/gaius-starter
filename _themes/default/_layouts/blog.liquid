<!doctype html>
<html lang="en">

  {% include '_head' %}

  <body>

    {% include '_nav' %}
    
    <div class="container pt-5 pb-5">

      <section class="mb-5">
        <!-- Content here -->
        {{ page.content }}
      </section>

      <section class="mb-5">
        <h3>Tag List</h3>
        <div>
          {% for tag in site.tags %}
              <a href="#" class="btn btn-primary btn-sm" role="button">{{ tag.name }}</a>
          {% endfor %}
        </div>
      </section>

      <!-- This loops through the paginated posts -->
      {% for post in paginator.posts %}
        <section class="mb-5">
          <h3><a href="{{ post.url }}">{{ post.title }}</a></h3>
          {{ post.excerpt }}
          <div>
            {% for tag in post.tags %}
              <a href="#" class="btn btn-secondary btn-sm" role="button">{{ tag.name }}</a>
            {% endfor %}
          </div>
        </section>
      {% endfor %}

      <nav aria-label="Blog navigation">
        <ul class="pagination justify-content-center">
          {% if paginator.previous_page %}
            <li class="page-item">
              <a class="page-link" href="{{ paginator.previous_page_path }}">Previous</a>
            </li>
          {% else %}
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
          {% endif %}
          {% if paginator.next_page %}
            <li class="page-item">
              <a class="page-link" href="{{ paginator.next_page_path }}">Next</a>
            </li>
          {% else %}
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Next</a>
            </li>
          {% endif %}
        </ul>
      </nav>

    </div>

    {% include '_footer' %}

  </body>
</html>